  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test javascript",
      "type": "shell",
      "command": "tsc && jasmine ${file}",
      "problemMatcher": []
    },
    {
      "label": "Fetch javascript",
      "type": "shell",
      "command": "exercism fetch javascript",
      "problemMatcher": []
    },
    {
      "label": "Run javascript",
      "type": "shell",
      "command": "node ${file}",
      "problemMatcher": []
    },
    {
      "label": "Execute typescript file",
      "type": "shell",
      "command": "tsc && node ${fileDirname}/${fileBasenameNoExtension}.js",
      "problemMatcher": []
    }
  ]
}