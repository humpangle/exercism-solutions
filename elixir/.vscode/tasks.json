{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mix run ${file}",
      "type": "shell",
      "command": "mix run ${file}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    },

    {
      "label": "iex --werl -S mix",
      "type": "shell",
      "command": "iex --werl -S mix",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    },

    {
      "label": "Mix test file",
      "type": "shell",
      "command": "mix exercism test ${file}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    },

    {
      "label": "exs to ex",
      "type": "shell",
      "command": "mix exercism exs-to-ex ${file}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    },

    {
      "label": "Submit elixir",
      "type": "shell",
      "command": "mix exercism submit",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    }
  ]
}
