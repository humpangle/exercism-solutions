{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mix run ${file}",
      "type": "shell",
      "command": "mix run ${file}",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    },

    {
      "label": "iex --werl -S mix",
      "type": "shell",
      "command": "iex --werl -S mix",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    },

    {
      "label": "Mix test ex file",
      "type": "shell",
      "command": "mix run ${fileDirname}/${fileBasenameNoExtension}_test.exs",
      "problemMatcher": [
        "$mixCompileError",
        "$mixCompileWarning",
        "$mixTestFailure"
      ]
    }
  ]
}
